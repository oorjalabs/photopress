<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="image"
            type="net.c306.photopress.ui.newPost.PostImage" />
        
        <variable
            name="handler"
            type="net.c306.photopress.ui.newPost.NewPostFragment.BindingHandler" />
        
        <import type="android.view.View" />
    </data>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/added_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gallery_grid_item_margin"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_rounded_solid"
            android:contentDescription="@string/new_post_cd_photo_attributes"
            android:foreground="?selectableItemBackground"
            android:onClick="@{() -> handler.openImageAttributes(image)}"
            android:tooltipText="@string/new_post_cd_photo_attributes"
            android:visibility="@{image.uri == null ? View.GONE : View.VISIBLE}"
            app:imageUri="@{image.uri}"
            tools:src="@tools:sample/backgrounds/scenic" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#64ffffff"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/list_item_spacing_half"
            android:paddingVertical="@dimen/list_item_spacing_quarter"
            android:text="@{image.caption}"
            android:visibility="@{image.caption == null ? View.GONE : View.VISIBLE}"
            tools:text="Caption for this image" />
    </FrameLayout>
</layout>