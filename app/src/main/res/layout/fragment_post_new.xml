<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="viewmodel"
            type="net.c306.photopress.ui.newPost.NewPostViewModel" />
        
        <variable
            name="avm"
            type="net.c306.photopress.AppViewModel" />
        
        <variable
            name="galleryAdapter"
            type="net.c306.photopress.ui.newPost.gallery.GalleryAdapter" />
        
        <variable
            name="handler"
            type="net.c306.photopress.ui.newPost.NewPostFragment.BindingHandler" />
        
        <import type="net.c306.photopress.ui.newPost.NewPostViewModel.State" />
        
        <import type="android.view.View" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.newPost.NewPostFragment">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:padding="@dimen/activity_vertical_margin">
            
            <TextView
                android:id="@+id/blog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@{viewmodel.selectedBlog.name.empty ? @string/new_post_label_no_blog_selected :  @string/new_post_label_posting_as_author_to_blog(avm.userDisplayName, viewmodel.selectedBlog.name)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Selected blog name" />
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/list_item_spacing_half"
                android:layout_weight="1">
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/photo_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    
                    <TextView
                        android:id="@+id/photo_target"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_puppy_photo_target"
                        android:clickable="@{viewmodel.state == State.EMPTY}"
                        android:enabled="@{viewmodel.state == State.EMPTY}"
                        android:foreground="?selectableItemBackground"
                        android:gravity="bottom|center_horizontal"
                        android:onClick="@{() -> handler.openPhotoPicker()}"
                        android:paddingBottom="40dp"
                        android:text="@string/new_post_label_tap_to_add_photo"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textColor="?android:textColorSecondary"
                        android:visibility="@{viewmodel.imageCount == 0 ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    
                    <include
                        android:id="@+id/photo_view_import"
                        layout="@layout/image_section_single_image_post"
                        app:handler="@{handler}"
                        app:viewmodel="@{viewmodel}" />
                    
                    <include
                        android:id="@+id/gallery_view_import"
                        layout="@layout/image_section_multi_image_post"
                        tools:visibility="gone"
                        app:handler="@{handler}"
                        app:adapter="@{galleryAdapter}"
                        app:viewmodel="@{viewmodel}" />
                    
                    <Button
                        android:id="@+id/button_change_image"
                        style="@style/IconButton.NoBorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/new_post_cd_change_photo"
                        android:onClick="@{() -> handler.openPhotoPicker()}"
                        android:tooltipText="@string/new_post_cd_change_photo"
                        android:visibility="@{viewmodel.imageCount > 0 ? View.VISIBLE : View.GONE}"
                        app:icon="@drawable/ic_swap"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    
                    <Button
                        android:id="@+id/button_add_more_photos"
                        style="@style/IconButton.NoBorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/new_post_cd_add_more_photos"
                        android:onClick="@{() -> handler.openImageAttributes()}"
                        android:tooltipText="@string/new_post_cd_add_more_photos"
                        android:visibility="@{viewmodel.imageCount > 0 ? View.VISIBLE : View.GONE}"
                        app:icon="@drawable/ic_add"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                
                </androidx.constraintlayout.widget.ConstraintLayout>
    
                <TextView
                    android:id="@+id/text_image_caption"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/list_item_spacing_half"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:minHeight="@dimen/min_touch_size"
                    android:onClick="@{handler::openPostCaptionDialog}"
                    android:paddingHorizontal="@dimen/min_touch_size"
                    android:text="@{viewmodel.postCaption ?? @string/new_post_placeholder_no_caption}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="?android:textColorSecondary"
                    android:visibility="@{viewmodel.imageCount > 1 || viewmodel.postCaption != null ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/photo_container"
                    tools:text="@string/new_post_placeholder_no_caption">
                    <requestFocus />
                </TextView>
                
            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/holder_title"
                style="@style/UnderlinedTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/list_item_spacing_half"
                android:hint="@string/new_post_label_post_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_container">
                
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_post_title"
                    style="@style/UnderlinedTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="@{viewmodel.inputsEnabled}"
                    android:importantForAutofill="no"
                    android:inputType="textCapSentences"
                    android:lines="1"
                    android:text="@={viewmodel.postTitle}" />
            </com.google.android.material.textfield.TextInputLayout>
            
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/list_item_spacing_half"
                android:paddingTop="@dimen/list_item_spacing_half">
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_upload"
                    style="@style/Button.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@{viewmodel.state == State.READY ? @color/secondaryColor : @color/bg_fab_disabled}"
                    android:clickable="@{viewmodel.state == State.READY}"
                    android:contentDescription="@string/new_post_cd_fab_publish"
                    android:focusable="@{viewmodel.state == State.READY}"
                    android:onClick="@{handler::onPublishPressed}"
                    android:text="@string/new_post_button_upload_post"
                    android:tooltipText="@string/new_post_cd_fab_publish"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/button_post_settings"
                    app:layout_constraintTop_toTopOf="parent" />
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_post_settings"
                    style="@style/GroupButton.Secondary.IconOnly"
                    android:layout_height="match_parent"
                    android:backgroundTint="@{viewmodel.state == State.HAVE_IMAGE || viewmodel.state == State.READY ? @color/secondaryColor : @color/bg_fab_disabled}"
                    android:clickable="@{viewmodel.state == State.HAVE_IMAGE || viewmodel.state == State.READY}"
                    android:contentDescription="@string/new_post_cd_button_post_settings"
                    android:focusable="@{viewmodel.state == State.HAVE_IMAGE || viewmodel.state == State.READY}"
                    android:onClick="@{handler::openPostSettings}"
                    android:tooltipText="@string/new_post_cd_button_post_settings"
                    app:icon="@drawable/ic_settings"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_upload"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            
            </com.google.android.material.button.MaterialButtonToggleGroup>
        
        </LinearLayout>
        
        <View
            android:id="@+id/scrim_publishing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="@dimen/alpha_scrim_publishing"
            android:background="?colorSurface"
            android:visibility="@{viewmodel.state == State.PUBLISHING ? View.VISIBLE : View.GONE}"
            tools:visibility="gone" />
        
        <TextView
            android:id="@+id/message_publishing_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintEnd_toEndOf="@id/scrim_publishing"
            app:layout_constraintStart_toStartOf="@id/scrim_publishing"
            app:layout_constraintTop_toBottomOf="@id/progress_publishing" />
        
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_publishing"
            style="?android:progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />
    
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
