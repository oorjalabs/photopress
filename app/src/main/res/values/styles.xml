<resources>
    
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="BaseTheme.AppTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@color/bg_status_bar</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
    </style>

    <style name="AppTheme" parent="BaseTheme.AppTheme" />

    <style name="AppTheme.Splash">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/bg_color_splash</item>
        <item name="android:statusBarColor">@color/bg_color_splash</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:backgroundTint">?colorSurface</item>
    </style>
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
    
    <!-- Date chooser -->
    
    <style name="AppTheme.DateChooserDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Date - selected day's colour: define your own -->
        <!--header background, buttons colour-->
        <item name="colorAccent">@color/primaryColor</item>
        <!--  Colour of ok/cancel buttons  -->
<!--        <item name="materialButtonStyle">@style/TextButton.Secondary</item>-->
        <!--calendar background-->
        <!--        <item name="android:windowBackground">#5a5a5a</item>-->
        <!--selected day-->
        <!--        <item name="android:colorControlActivated">@color/colorAccent</item> -->
        <!--days of the month-->
        <!--        <item name="android:textColorPrimary">@color/colorPrimaryText</item> -->
        <!--days of the week-->
        <!--        <item name="android:textColorSecondary">@color/colorAccent</item>    -->
    </style>
    
    
    <!-- Bottom sheet dialog styles -->
    <style name="BottomSheetStyle" parent="@style/Widget.MaterialComponents.BottomSheet.Modal" />

    <style name="BottomSheetStyle.Rounded">
        <item name="shapeAppearanceOverlay">@style/RoundedTopCornersBottomSheetShapeAppearance</item>
    </style>

    <style name="RoundedTopCornersBottomSheetShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_padding</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_padding</item>
        <item name="android:paddingTop">@dimen/bottom_sheet_padding</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="AppTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle.Rounded</item>
    </style>

    <style name="AppTheme.BottomSheetDialog.OverflowMenu">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.05</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="BottomSheetActionButtons" parent="@style/TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="iconPadding">16dp</item>
        <item name="iconTint">?android:colorControlNormal</item>
    </style>

    <!-- Custom text input box styles -->

    <style name="UnderlinedTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/text_primary_on_surface</item>
        <item name="hintTextColor">@color/text_primary_on_surface</item>
    </style>

    <style name="UnderlinedTextInput" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:lineSpacingMultiplier">1.12</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="UnderlinedDenseTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/text_primary_on_surface</item>
        <item name="hintTextColor">@color/text_primary_on_surface</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="UnderlinedDenseTextInput" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:lineSpacingMultiplier">1.12</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="InputLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button"/>

    <style name="Button.Secondary">
        <item name="android:backgroundTint">@color/sl_bg_button_secondary</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/sl_ripple_text_button</item>
        <item name="android:textColor">@color/sl_tc_button_primary</item>
    </style>

    <style name="TextButton.Secondary">
        <item name="rippleColor">@color/sl_ripple_text_button_secondary</item>
        <item name="android:textColor">@color/sl_tc_button_secondary</item>
    </style>
    
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/sl_ripple_text_button</item>
        <item name="android:textColor">@color/sl_tc_button_primary</item>
    </style>

    <style name="OutlinedButton.Secondary">
        <item name="rippleColor">@color/sl_ripple_text_button_secondary</item>
        <item name="android:textColor">@color/sl_tc_button_secondary</item>
    </style>

    <style name="IconButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">@dimen/min_touch_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">@dimen/min_touch_size</item>
        <item name="android:minHeight">@dimen/min_touch_size</item>
        
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorControlNormal</item>
    </style>
    
    <style name="IconButton.NoBorder">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="IconButton.NoBorder.WithScrim">
        <item name="android:backgroundTint">@color/icon_button_scrim</item>
    </style>
    
    <style name="GroupButton.IconOnly" parent="Button">
        <item name="android:layout_width">@dimen/min_touch_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">@dimen/min_touch_size</item>
        <item name="android:minHeight">@dimen/min_touch_size</item>
        
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorControlNormal</item>
    </style>
    
    <style name="GroupButton.Secondary.IconOnly" parent="GroupButton.IconOnly">
        <item name="android:backgroundTint">@color/sl_bg_button_secondary</item>
        <item name="iconTint">?android:colorForegroundInverse</item>
    </style>
    
</resources>
