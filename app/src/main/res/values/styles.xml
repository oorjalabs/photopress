<resources>
    
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="BaseTheme.AppTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@color/bg_status_bar</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
    </style>

    <style name="AppTheme" parent="BaseTheme.AppTheme" />

    <style name="AppTheme.Splash">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/bg_color_splash</item>
        <item name="android:statusBarColor">@color/bg_color_splash</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>


    <style name="UnderlinedTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/text_primary_on_surface</item>
        <item name="hintTextColor">@color/text_primary_on_surface</item>
    </style>

    <style name="UnderlinedTextInput" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:lineSpacingMultiplier">1.12</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="UnderlinedDenseTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/text_primary_on_surface</item>
        <item name="hintTextColor">@color/text_primary_on_surface</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="UnderlinedDenseTextInput" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:lineSpacingMultiplier">1.12</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="InputLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button"/>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/sl_tc_button_primary</item>
    </style>

</resources>
